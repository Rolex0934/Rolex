    def home(self):
        while(True):
            print("\nWelcome to Shopon")
            print("1.Login \n2.Your Cart \n3.Exit")
            ch = input("Enter your choice: ").strip()
            if ch == "1":
                self.User()
            elif ch == "2":
                self.view_cart()
            elif ch == "3":
                print("Thank You for visiting the page")
                break
            else:
                print("Invalid choice. Please try again.\n")
  
obj=A()
obj.home()
